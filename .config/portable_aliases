# vim: ft=sh
### Aliases that work on POSIX shells, fish, ion, and more
alias bp='bpython'
alias bpy='bpython'
alias bulk-rename='qmv -fdo'
alias c='clear'
alias cat='bat -pp'
alias cl='clear'
alias cls='clear'
alias clscr='clear'
alias d='cd'
alias darken='sudo brightnessctl s 1'
alias dir='dir --color=auto'
alias diskus='diskus --size-format=binary'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias get-dims='stty -a <$(tty) | head -1 | choose 4 6 | tr -d \; | awk '\''{print($2"x"$1)}'\'''
alias grep='grep --color=auto'
alias h='history'
alias ipconfig='ifconfig'
alias l='lsd -F'
alias la='lsd -A'
alias ll='lsd -AlF'
alias ls='lsd'
alias pinfo='/usr/bin/ps -Flww -p'
alias rm='trash'
alias sl='sl -e'
alias sss='fakeroot sss'
alias t='tree'
alias u='universal_upgrade'
alias v='vim'
alias vdir='vdir --color=auto'
alias vi='vim'
alias x='xclip -sel c'
